
extends layout 

block content
    main 
        div.header
            h1 Create Category
            p An open invitation to create a 'fine' category
            hr
        form.create-form(action='' method='POST')
            div.form-group
                label(for='name') Name
                input#name(
                name='name'
                type='text'
                placeholder='Impressionism'
                required='true'
                value=(category ? category.name : '') 
                )
            div.form-group
                label(for='description') Description
                textarea#description(
                name='description'
                type='text'
                placeholder='Impressionism is a world famous...'
                required='true'
                ) #{category ? category.description : '' }
            button.main-button(type='submit') Submit
        if errors
            ul.errors
                each error in errors
                    li= error.msg
        



